<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".Sections_Teacher_Activity">

    <ImageView
        android:id="@+id/section_Teacher_Iv"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"

        android:src="@drawable/ctis151"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/section_Teacher_TvCourse"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/shadow"
        android:padding="10dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/text_Size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/section_Teacher_Iv" />

    <TextView
        android:id="@+id/section_Teacher_TvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow"
        android:padding="10dp"
        android:text="@string/SECTIONS"
        android:textColor="@color/black"
        android:textSize="@dimen/header_Size"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/section_Teacher_Rv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/section_Teacher_TvCourse" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/section_Teacher_Rv"
        android:layout_width="350dp"
        android:layout_height="330dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/shadow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/section_Teacher_TvCourse" />

    <Button
        android:id="@+id/section_Teacher_BtnAdd"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/component_Margin_Top"
        android:backgroundTint="@color/material_dynamic_secondary10"
        android:text="@string/ADD"
        android:textSize="@dimen/text_Size"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/section_Teacher_Rv" />

</androidx.constraintlayout.widget.ConstraintLayout>